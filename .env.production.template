# Production Environment Variables for Backend
# ⚠️ DO NOT commit this file with real values! Copy to .env and fill with production values

# Database Configuration
# Replace with your production database URL
DATABASE_URL="postgresql://USERNAME:PASSWORD@HOST:5432/DATABASE_NAME?schema=public"

# JWT Secret
# ⚠️ CRITICAL: Generate a strong secret using:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Minimum 64 characters, random, and unique
JWT_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET_MIN_64_CHARS"

# Server Configuration
PORT=3001

# CORS Configuration
# Set to your frontend production URL
CORS_ORIGIN="https://your-frontend-domain.com"

# Node Environment
NODE_ENV="production"

# Optional: Email Configuration (for notifications)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=

# Optional: File Upload Configuration
# MAX_FILE_SIZE=5242880  # 5MB
# UPLOAD_PATH=/uploads

# Optional: Redis Configuration (for session/caching)
# REDIS_URL=redis://localhost:6379
